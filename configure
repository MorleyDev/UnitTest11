if [ "$(expr substr $(uname -s) 1 10)" == "MINGW32_NT" ]; then
	if [ $# -gt 0 ]; then
		cmake . -DCMAKE_MAKE_PROGRAM=make -G"MinGW Makefiles" -DCMAKE_BUILD_TYPE=$0
	else
		cmake . -DCMAKE_MAKE_PROGRAM=make -G"MinGW Makefiles"
	fi
else 
	if [ $# -gt 0 ]; then
		cmake . -DCMAKE_BUILD_TYPE=$0
	else
		cmake .
	fi
fi
